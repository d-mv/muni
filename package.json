{
  "name": "muni-dev",
  "version": "0.5.0",
  "author": "Dmitry Melnikov",
  "description": "Muni Project",
  "license": "UNLICENSED",
  "private": true,
  "repository": "",
  "scripts": {
    "start": "node ./dist/src/start.js",
    "dev": "npm run build:live",
    "build": "tsc ./src/*.ts --outDir ./dist",
    "build:live": "nodemon --watch '**/**/*.ts' --exec 'ts-node' src/start.ts",
    "full": "npm run dev & npm run client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client && npm run build",
    "client": "npm start --prefix client",
    "client-install": "npm install --prefix client",
    "test": "jest --watchAll",
    "docs:code": "typedoc"
  },
  "devDependencies": {
    "@trongnd/ts-nodemon": "^1.0.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/faker": "^4.1.5",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.13",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.28",
    "@types/node": "^12.0.5",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "faker": "^4.1.0",
    "husky": "^2.4.0",
    "jest": "24.7.1",
    "lint-staged": "^8.2.0",
    "prettier": "^1.17.1",
    "prettier-tslint": "^0.4.2",
    "ts-jest": ">=24.0.2",
    "ts-node": "^8.2.0",
    "ts-node-dev": "^1.0.0-pre.39",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "axios": "^0.18.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "http-errors": "^1.7.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.2.7"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
