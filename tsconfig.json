{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "types": ["jest", "node"]
  },
  "include": [
    "./src/*.ts",
    "./routes/*.ts",
    "./models/*.ts",
    "./modules/*.ts",
    "./controllers/*.ts"
  ],
  "exclude": ["./src/public/", "node_modules", "jest.config.js", "client"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
