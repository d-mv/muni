{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es7",
      "esnext"
    ],
    "jsx": "preserve",
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "./src/*.ts",
    "./routes/*.ts",
    "./models/*.ts",
    "./modules/*.ts",
    "./src/data/*.json",
    "./controllers/*.ts"
  ],
  "exclude": [
    "./src/public/",
    "node_modules",
    "jest.config.js",
    "client"
  ]
}